
package ch.hearc.coursjava.moo.dice;

public class UseMoyenneur
	{

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static void main(String[] args)
		{
		main();
		}

	public static void main()
		{
		useExperience();
		useMoyenneur();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private static void useMoyenneur()
		{
		Moyenneur moyenneur = new Moyenneur(Integer.MAX_VALUE/10000, 6);
		moyenneur.run();
		System.out.println("Nombre de lancés en moyenne : "+moyenneur.getNbLancerMoyen());
		}

	private static void useExperience()
		{
		ExperienceDice experienceDice = new ExperienceDice(6);
		experienceDice.run();
		System.out.println("Nombre de lancés : "+experienceDice.getNbLancer());
		}

	}

