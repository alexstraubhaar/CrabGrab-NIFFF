
package ch.hearc.coursjava.gui.doubleFrame;

import org.junit.Assert;


public class UseDoubleFrame
	{

	/*------------------------------------------------------------------*\
	 |*							Methodes Public							*|
	 \*------------------------------------------------------------------*/

	public static void main(String[] args)
		{
		if (args.length != 1)
			{
			System.out.println("Wrong number of arguments supplied.");
			System.out.println("Correct usage:\n 1 argument nbButton (int)");
			System.exit(-1); // 0 normal, -1 abnormal
			}

		int nbButtons = parse(args);
		main(nbButtons);
		}

	public static void main(int nbButtons)
		{
			new DoubleFrame(nbButtons);
		}

	/*------------------------------------------------------------------*\
	 |*							Methodes Private						*|
	 \*------------------------------------------------------------------*/

	private static int parse(String[] input)
		{
		Assert.assertTrue("Wrong number of arguments supplied. Needs 1 argument.", input.length == 1);

		return toInteger(input[0]);
		}

	private static int toInteger(String value)
		{
		try
			{
			return Integer.valueOf(value);
			}
		catch (NumberFormatException e)
			{
			System.err.println(value + " is not a valid number.");
			System.exit(-1); // 0 normal, -1 abnormal
			return -1;
			}
		}
	}
