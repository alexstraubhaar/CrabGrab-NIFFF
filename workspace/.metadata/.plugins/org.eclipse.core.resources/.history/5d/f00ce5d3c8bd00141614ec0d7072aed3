
package ch.hearc.coursjava.gui.doubleFrame;

import java.awt.GridLayout;
import java.awt.Point;

import javax.swing.JFrame;

public class JFrameBase extends JFrame
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JFrameBase(String text, Point location)
		{
		geometry(text);
		control();
		apparence(location);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void geometry(String text)
		{
		this.setTitle(text);
		this.setLayout(new GridLayout());
		}

	private void control()
		{
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		}

	private void apparence(Point location)
		{
		this.setSize(800, 100);
		this.setLocation(location);
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	}
