
package ch.hearc.coursjava.gui.doubleFrame;

import javax.swing.JButton;

public class JButtonLabelCount extends JButton
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JButtonLabelCount(JLabelCount jLabelCount, String text)
		{
		this.jLabelCount = jLabelCount;
		this.setText(text);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	void incrementLabel()
		{
		this.jLabelCount.increment();
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	//Tools
	private JLabelCount jLabelCount;

	}
