
package ch.hearc.coursjava.gui.j2d.hello;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.GradientPaint;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Point;
import java.awt.geom.AffineTransform;
import java.awt.geom.Arc2D;
import java.awt.geom.Ellipse2D;
import java.awt.geom.Line2D;
import java.awt.geom.Rectangle2D;

import javax.swing.JPanel;

public class JPanelJ2dHello extends JPanel
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JPanelJ2dHello()
		{
		this.ligne2d = new Line2D.Double(10, 150, 150, 250);
		this.rectangle2d = new Rectangle2D.Double(10, 10, 100, 180);
		this.ellipse2d = new Ellipse2D.Double(200, 100, 100, 80);
		this.arc2d = new Arc2D.Double(200, 200, 100, 50, 0, 270, Arc2D.PIE);
		this.myColor = new Color(127, 37, 69);
		this.myString = "Coucou";
		this.helvetica = new Font("Helvetica", Font.ITALIC + Font.BOLD, 30);
		this.degrade = new GradientPaint(new Point(20, 40), Color.RED, new Point(80, 100), Color.BLUE);

		geometry();
		control();
		appearance();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	// Graphics: contexte graphique à ne jamais stocker comme attribut
	// Attention: 2 methodes painteComponent. Prendre la version "protected"
	@Override
	protected void paintComponent(Graphics g)
		{
		super.paintComponent(g);
		Graphics2D g2d = (Graphics2D)g;

		AffineTransform initG2d = g2d.getTransform();
		dessiner(g2d);
		g2d.setTransform(initG2d);
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void dessiner(Graphics2D g2d)
		{

		g2d.setColor(Color.RED);
		g2d.draw(ligne2d);
		g2d.setColor(Color.GREEN);
		g2d.draw(ellipse2d);
		g2d.setColor(myColor);
		g2d.fill(arc2d);
		g2d.setFont(helvetica);
		g2d.drawString(myString, 127, 236);
		g2d.setPaint(degrade);
		g2d.scale(2, 2);
		g2d.fill(rectangle2d);

		}

	private void geometry()
		{
			// JComponent : Instanciation

			// Layout : Specification
			{
			FlowLayout flowlayout = new FlowLayout(FlowLayout.CENTER);
			setLayout(flowlayout);

			// flowlayout.setHgap(20);
			// flowlayout.setVgap(20);
			}

		// JComponent : add

		}

	private void control()
		{
		// rien
		}

	private void appearance()
		{
		// rien
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	// Tools
	private Line2D ligne2d;
	private Rectangle2D rectangle2d;
	private Ellipse2D ellipse2d;
	private Arc2D arc2d;
	private Color myColor;
	private String myString;
	private Font helvetica;
	private GradientPaint degrade;
	}
