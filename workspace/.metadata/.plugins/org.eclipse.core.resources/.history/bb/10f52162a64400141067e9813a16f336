
package ch.hearc.coursjava.kitbase.Quadratic;

public class UseQuadratic
	{

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static void main(String[] args)
		{
		main();
		}

	public static void main()
		{
		double[] tabCoefficient = Quadratic.saisir();
		
		double[] tabSolutions = Quadratic.solve(tabCoefficient);
		
		Quadratic.print(tabCoefficient, tabSolutions);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	}
