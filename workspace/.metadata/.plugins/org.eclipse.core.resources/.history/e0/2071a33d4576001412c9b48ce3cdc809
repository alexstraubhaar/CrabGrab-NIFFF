
package ch.hearc.coursjava.moo.dice;

public class Moyenneur implements Runnable
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public Moyenneur(int nbExperience, int nbFace)
		{
		this.nbExperience = nbExperience;
		this.nbFace = nbFace;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	@Override
	public void run()
		{
		this.nbLancerMoyen = 0;
		for(int i = 1; i <= nbExperience; i++)
			{
			ExperienceDice experienceDice = new ExperienceDice(nbFace);
			experienceDice.run();
			nbLancerMoyen += experienceDice.getNbLancer();
			}
		nbLancerMoyen /= (double) nbExperience;
		nbLancerMoyen = (int) Math.ceil(nbLancerMoyen);
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	public int getNbLancerMoyen()
		{
		return this.nbLancerMoyen;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	//Inputs
	private int nbExperience;
	private int nbFace;

	//Outputs
	private int nbLancerMoyen;

	//Tools

	}

