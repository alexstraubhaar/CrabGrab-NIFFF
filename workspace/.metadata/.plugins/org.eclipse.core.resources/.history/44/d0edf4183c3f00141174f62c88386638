
package ch.hearc.coursjava.kitbase.lineaire;

import com.bilat.tools.io.console.Clavier;

public class Lineaire
	{
	
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	
	public static double[] saisir()
		{
		double a;
		do
			{
			a = Clavier.lireDouble("A = ");
			} while(a == 0);
		
		double b = Clavier.lireDouble("B = ");
		
		double[] tabCoefficient = new double[2];
		tabCoefficient[0] = a;
		tabCoefficient[1] = b;
		
		return tabCoefficient;
		}
	
	public static double solve(double[] tabCoefficient)
		{
		return -tabCoefficient[1] / tabCoefficient[0];
		}
	
	public static void print(double[] tabCoefficient, double x)
		{
		System.out.println(tabCoefficient[0] + "x +" + tabCoefficient[1] + ": x =" + x);
		}
	
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	
	}
