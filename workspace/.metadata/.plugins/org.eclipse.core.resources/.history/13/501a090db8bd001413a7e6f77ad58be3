
package ch.hearc.coursjava.gui.layout.sans.animation;

import javax.swing.JButton;
import javax.swing.JFrame;

public class JFrameBoutonTournant extends JFrame
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JFrameBoutonTournant()
		{
		geometry();
		control();
		apparence();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void geometry()
		{
			boutonStart = new JButton("Start");
			boutonStop = new JButton("Stop");
			boutonTournant = new JButton("Tournant");

			boutonStart.setSize(100, 40);
			boutonStart.setLocation(10, 10);

			boutonStop.setSize(100, 40);
			boutonStop.setLocation(10, 100);
			setLayout(null); //bien quand taille d'écran fixe, sans traduction
			add(boutonStart);
		}

	private void control()
		{
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		}

	private void apparence()
		{
		setSize(200, 200);
		setVisible(true);
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	//Tools
	private JButton boutonTournant;
	private JButton boutonStart;
	private JButton boutonStop;

	}
