
package ch.hearc.coursjava.moo.dice;

import java.util.HashSet;
import java.util.Random;
import java.util.Set;

public class ExperienceDice implements Runnable
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public ExperienceDice(int nbFace)
		{
		//Inputs
		this.nbFace = nbFace;

		//Tools
		this.setfaceObtenus = new HashSet<Integer>(nbFace);
		this.random = new Random();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	@Override
	public void run()
		{
		this.nbLancer = 0;
		while(setfaceObtenus.size() < nbFace)
			{
			setfaceObtenus.add(alea());
			nbLancer++;
			}
		}

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	public int getNbLancer()
		{
		return this.nbLancer;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private int alea()
		{
		return random.nextInt(nbFace+1);
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	//Inputs
	private int nbFace;

	//Outputs
	private int nbLancer;

	//Tools
	private Set<Integer> setfaceObtenus;
	private Random random;
	}
