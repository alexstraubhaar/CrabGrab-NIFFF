
package processing.flocking;

import java.util.ArrayList;

public class Flock
{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public Flock()
	{
		boids = new ArrayList<GeneralBoid>();
	}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public void run()
	{
		for (GeneralBoid b : boids)
		{
			b.run(boids);
		}
	}

	public void addBoid(GeneralBoid b)
	{
		boids.add(b);
	}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	private ArrayList<GeneralBoid> boids; // contient le tout
}

