
package ch.hearc.coursjava.moo.complexe;

import ch.hearc.coursjava.kitbase.tools.MathTools;

public class Complexe
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public Complexe(double re, double im)
		{
		this.re = re;
		this.im = im;
		}

	public Complexe()
		{
		this(0, 0);
		}

	public Complexe(Complexe src)
		{
		this(src.re, src.im);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	@Override
	public String toString()
		{
		StringBuilder builder = new StringBuilder();
		builder.append("Complexe [re=");
		builder.append(this.re);
		builder.append(", im=");
		builder.append(this.im);
		builder.append("]");
		return builder.toString();
		}

	public Complexe cloneOf()
		{
		return new Complexe(this);
		}

	public Complexe add(Complexe z2)
		{
		Complexe z1 = new Complexe();
		z1.re = this.re + z2.re;
		z1.im = this.im + z2.im;
		return z1;
		//return new Complexe(this.re + z2.re, this.im + z2.im);
		}

	public Complexe mul(double scalaire)
		{
		return new Complexe(this.re * scalaire, this.im * scalaire);
		}

	public Complexe sub(Complexe z2)
		{
		return this.add(-z2);
		}

	/*------------------------------*\
	|*				Is				*|
	\*------------------------------*/

	public boolean isEquals(Complexe z2, double epsilon)
		{
		return MathTools.isEquals(this.re, z2.re, epsilon) && MathTools.isEquals(this.im, z2.im, epsilon);
		}

	public boolean isEquals(Complexe z2)
		{
		return isEquals(z2, 0);
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	//Inputs : représentation cartésienne
	private double re;
	private double im;

	//Tools : représentation polaire
	}
