
package ch.hearc.coursjava.gui.doubleFrame;

import java.awt.Point;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

public class DoubleFrame
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public DoubleFrame(int size)
		{
		SIZE = size;
		geometry();
		control();
		apparence();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void geometry()
		{
		Point positionLabelFrame = new Point(200,300);
		Point positionbuttonFrame = new Point(200,200);

		labelFrame = new JFrameBase("Labels Frame",positionLabelFrame);
		buttonFrame = new JFrameBase("Buttons Frame",positionbuttonFrame );

		tabJButton = new JButton[SIZE];

		JLabelCount newLabel;

		for(int i = 0; i < SIZE; i++)
			{
			newLabel = new JLabelCount();
			labelFrame.add(newLabel);

			tabJButton[i] = new JButtonLabelCount(newLabel, i + 1 + "");
			buttonFrame.add(tabJButton[i]);
			}
		}

	private void control()
		{
		ActionListener actionListener = new ActionListener()
			{
				@Override
				public void actionPerformed(ActionEvent e)
					{
						((JButtonLabelCount) e.getSource()).incrementLabel();
					}

			};

		for(JButton jButton:tabJButton)
			{
			jButton.addActionListener(actionListener);
			}
		}

	private void apparence()
		{
			labelFrame.setVisible(true);
			buttonFrame.setVisible(true);
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	//Tools
	private JFrame labelFrame;
	private JFrame buttonFrame;
	private JButton[] tabJButton;

	private final int SIZE;
	}
